<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E5E5E5"
    >

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center"
        android:background="@drawable/flag"
        tools:ignore="ContentDescription"
        android:scaleX="0"
        android:scaleY="0"/>

    <TextView
        android:id="@+id/text_app"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/img_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="کد ملی را وارد نمایید"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal"
        android:alpha="0" />

    <EditText
        android:id="@+id/national_code"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_app"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:hint="کد ملی"
        android:maxLength="10"
        android:layout_gravity="center_horizontal"
        android:inputType="text"
        android:scaleX="0"
        android:scaleY="0"
        tools:ignore="Autofill" />


    <TextView
        android:id="@+id/txt_check"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/national_code"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="dsadas"
        android:textAlignment="center"
        android:layout_margin="2dp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:alpha="0" />


</androidx.constraintlayout.widget.ConstraintLayout>